@model InShare.Model.UserEntity

@{
    ViewBag.Title = "用户编辑";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<form id="formEdit">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row cl">
        <label class="form-label col-3"><span class="c-red">*</span>账号：</label>
        <div class="formControls col-5">
            <input type="text" class="input-text" name="UserName" value="@Model.UserName" id="UserName" datatype="*2-10" nullmsg="账号不能为空" />
        </div>
        <div class="col-4"> </div>
    </div>
    <div class="row cl">
        <label class="form-label col-3"><span class="c-red">*</span>名称：</label>
        <div class="formControls col-5">
            <input type="text" class="input-text" name="FullName" placeholder="请输入名称" value="@Model.FullName" id="FullName" datatype="*2-10" nullmsg="名称不能为空" />
        </div>
        <div class="col-4"> </div>
    </div>
    <div class="row cl">
        <label class="form-label col-3"><span class="c-red">*</span>邮箱：</label>
        <div class="formControls col-5">
            <input type="email" class="input-text" value="@Model.Profile.Email" name="Email" id="Email" datatype="e" nullmsg="邮箱不能为空" />
        </div>
        <div class="col-4"> </div>
    </div>
    <input type="button" value="保存" id="btnSave" />
</form>

@section FooterScript
{
    <script type="text/javascript">
        var saveAjax = function () {
            var formData = $("#formEdit").serializeArray();
            $.ajax({
                url: "/Manage/User/Edit",
                type: "post",
                data:formData,
                dataType: "json",
                success: function (res) {
                    if(res.Status=="OK")
                    {
                        parent.location.reload();//刷新父窗口
                    }
                    else
                    {
                        alert(res.ErrorMsg);
                    }
                },
                error: function () { alert("请求出错"); }
            });
        };
        $(function () {
            var validForm = $("#formEdit").Validform({ tiptype: 2 });
            $("#btnSave").click(function () {
                if (validForm.check(false))
                {
                    saveAjax();
                }
            });
