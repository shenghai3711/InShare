                    {
                        <button type="button" style="position: relative; float: right; font-size: x-large; margin-top: 5px;" id="btn_edit">edit profile</button>
                    }
                    else
                    {
                        if (ViewBag.Following)
                        {
                            <button type="button" style="position: relative; float: right; font-size: x-large; margin-top: 5px;" id="btn_following">Following</button>
                        }
                        else
                        {
                            <button type="button" style="position: relative; float: right; font-size: x-large; margin-top: 5px;" id="btn_follow">Follow</button>
                        }
                    }
                    <ul style="width: 100%; height: 30px; padding: 10px 0px;">
                        <li>following @ViewBag.FollowingCount </li>
                        <li>follower @ViewBag.FollowerCount </li>
                        <li>posts @ViewBag.PostCount</li>
                        <input type="hidden" value="@ViewBag.PostCount" id="postCount" />
                    </ul>
                    <ul>
                        <li><span>@Model.FullName </span>@Model.Biography</li>
                    </ul>
                </div>
            </div>
