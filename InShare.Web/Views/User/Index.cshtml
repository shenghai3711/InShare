<div class="myIndex">
    <div class="center">
        <div class="centerTop">
            <div class="top1">
                <div style="position: absolute;height:150px;width:150px;margin-left:250px;">
                    <img src="@Model.ProfilePic" />
                </div>
                <div class="top1Left">
                    <text style="font-size:xx-large;">@Model.UserName</text>
