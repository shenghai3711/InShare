    <!----wookmark-scripts---->
    <script src="~/Content/js/jquery.imagesloaded.js"></script>
    <script src="~/Content/js/jquery.wookmark.js"></script>
    <script type="text/javascript">
        var isLoading = false;

        (function ($) {
            var $tiles = $('#tiles'),
                $handler = $('li', $tiles),
                $main = $('#main'),
                $window = $(window),
                $document = $(document),
                options = {
                    autoResize: true, // This will auto-update the layout when the browser window is resized.
                    container: $main, // Optional, used for some extra CSS styling
                    offset: 20, // Optional, the distance between grid items
                    itemWidth: 280 // Optional, the width of a grid item
                };
            /**
             * Reinitializes the wookmark handler after all images have loaded
             */
            function applyLayout() {
                $tiles.imagesLoaded(function () {
                    // Destroy the old handler
                    if ($handler.wookmarkInstance) {
                        $handler.wookmarkInstance.clear();
                    }
                    // Create a new layout handler.
                    $handler = $('li', $tiles);
                    $handler.wookmark(options);
                });

                //点击分享
                $(".post-share").click(function () {
                    $("#rePostId").val($(this).parent().parent().parent().attr('id'));
                    $("#msgBox").show();
                });

                $("#cancelBtn").click(function () {
                    $("#msgBox").hide();
                });
            }
            /**
             * When scrolled all the way to the bottom, add more tiles
             */
            //下拉加载
            function onScroll() {

                if ($(document).scrollTop() >= $(document).height() - $(window).height()) {
                    var pageIndex = $("#pageIndex").val();
                    var isExistPost = $("#isExistPost").val();
                    var loadedCount = $("#tiles").children("li").length;
                    if ((pageIndex - 1) * 6 == loadedCount) {
                        return;//防止重复加载
                    }
                    if (isLoading && !isExistPost) {
                        return;
                    }
                    isLoading = true;
                    //发送加载下一页请求
                    $.ajax({
                        url: "/Home/Load", dataType: "json",
                        type: "post", data: { pageIndex: ++pageIndex },
                        success: function (res) {
                            if (res.Status == "OK") {
                                $("#pageIndex").val(pageIndex);
                                for (var i = 0; i < res.Data.length; i++) {
                                    var postUrl = "location.href='/Post/" + res.Data[i].ShortCode + "';";
                                    $tiles.append('<li id="' + res.Data[i].Id + '"><img src="' + res.Data[i].DisplayUrl + '"onclick="' + postUrl + '"/><div class="post-info"><div class="post-basic-info"><h3><a href="/User/' + res.Data[i].UserId + '">' + res.Data[i].UserName + '</a></h3><span><a href="#"><label> </label>' + res.Data[i].Location + '</a></span><p>' + res.Data[i].Caption + '</p></div><div class="post-info-rate-share"><div class="rateit"><span>' + res.Data[i].DateTime + '</span></div><div class="post-share"><span> </span></div><div class="clear"> </div></div></div></li>');
                                }
                                //判断是否为最后一页
                                if (res.Data.length < 6) {
                                    $("#isExistPost").val(false);
                                }
                                isLoading = false;
                            } else {
                                alert(res.ErrorMsg);
                            }
                        }, error: function () {
                            alert("Network error");
                        }
                    });
                    applyLayout();
                }
            };

            // Call the layout function for the first time
            applyLayout();

            // Capture scroll event.
            $window.bind('scroll.wookmark', onScroll);
        })(jQuery);

    </script>
